#ifndef MGL_VERSION_H
#define MGL_VERSION_H

#include <string>
#include <sstream>

namespace ProjectTemplate {
namespace mgl {
/// The current major version.
#define MGL_VERSION_MAJOR @VERSION_MAJOR@

/// The current minor version.
#define MGL_VERSION_MINOR @VERSION_MINOR@

/// The current patch level.
#define MGL_VERSION_PATCH @VERSION_PATCH@

/// The current svn revision.
#define MGL_VCS_REVISION "@VCS_REVISION@"

/// True if the current version is newer than the given one.
#define MGL_VERSION_GT(MAJOR, MINOR, PATCH) \
  ((MGL_VERSION_MAJOR > MAJOR) ||           \
   (MGL_VERSION_MAJOR ==                    \
    MAJOR&&(MGL_VERSION_MINOR > MINOR || (MGL_VERSION_MINOR == MINOR&& MGL_VERSION_PATCH > PATCH))))

/// True if the current version is equal or newer to the given.
#define MGL_VERSION_GE(MAJOR, MINOR, PATCH) \
  ((MGL_VERSION_MAJOR > MAJOR) ||           \
   (MGL_VERSION_MAJOR ==                    \
    MAJOR&&(MGL_VERSION_MINOR > MINOR || (MGL_VERSION_MINOR == MINOR&& MGL_VERSION_PATCH >= PATCH))))

/// True if the current version is older than the given one.
#define MGL_VERSION_LT(MAJOR, MINOR, PATCH) \
  ((MGL_VERSION_MAJOR < MAJOR) ||           \
   (MGL_VERSION_MAJOR ==                    \
    MAJOR&&(MGL_VERSION_MINOR < MINOR || (MGL_VERSION_MINOR == MINOR&& MGL_VERSION_PATCH < PATCH))))

/// True if the current version is older or equal to the given.
#define MGL_VERSION_LE(MAJOR, MINOR, PATCH) \
  ((MGL_VERSION_MAJOR < MAJOR) ||           \
   (MGL_VERSION_MAJOR ==                    \
    MAJOR&&(MGL_VERSION_MINOR < MINOR || (MGL_VERSION_MINOR == MINOR&& MGL_VERSION_PATCH <= PATCH))))

/// Information about the current mgl version.
class Version {
public:
  /// @return the current major version of mgl.
  static int getMajor()
  {
    return MGL_VERSION_MAJOR;
  }

  /// @return the current minor version of mgl.
  static int getMinor()
  {
    return MGL_VERSION_MINOR;
  }

  /// @return the current patch level of mgl.
  static int getPatch()
  {
    return MGL_VERSION_PATCH;
  }

  /// @return the current mgl version (MM.mm.pp).
  static std::string getString()
  {
    std::ostringstream version;
    version << MGL_VERSION_MAJOR << '.' << MGL_VERSION_MINOR << '.' << MGL_VERSION_PATCH;
    return version.str();
  }

  /// @return the SVN revision.
  static std::string getRevision()
  {
    return MGL_VCS_REVISION;
  }

  /// @return the current mgl version plus the SVN revision (MM.mm.pp.rev).
  static std::string getRevString()
  {
    std::ostringstream version;
    version << getString() << '.' << MGL_VCS_REVISION;
    return version.str();
  }
};
}
}

#endif // MGL_VERSION_H
